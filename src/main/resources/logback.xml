<configuration>
    <appender name="DEMO" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%15.15t] %40.40c{40} : %msg%n
            </Pattern>
        </encoder>
    </appender>
    <logger name="com.example" level="INFO" additivity="false">
        <appender-ref ref="DEMO"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="DEMO"/>
    </root>
</configuration>
